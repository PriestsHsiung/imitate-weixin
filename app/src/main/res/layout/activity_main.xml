<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyman="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/tab_bg"
        android:orientation="horizontal" >

        <com.github.hsiung.weixin.ChangeColorIconWithText
            android:id="@+id/id_indicator_one"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            hyman:customeIcon="@drawable/ic_menu_start_conversation"
            hyman:customeText="@string/app_name"
            hyman:text_size="12sp"
            hyman:customeColor="#ff45c01a" />

        <com.github.hsiung.weixin.ChangeColorIconWithText
            android:id="@+id/id_indicator_two"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            hyman:customeIcon="@drawable/ic_menu_friendslist"
            hyman:customeText="@string/tab_contact"
            hyman:text_size="12sp"
            hyman:customeColor="#ff45c01a" />

        <com.github.hsiung.weixin.ChangeColorIconWithText
            android:id="@+id/id_indicator_three"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            hyman:customeIcon="@drawable/ic_menu_emoticons"
            hyman:customeText="@string/tab_found"
            hyman:text_size="12sp"
            hyman:customeColor="#ff45c01a" />

        <com.github.hsiung.weixin.ChangeColorIconWithText
            android:id="@+id/id_indicator_four"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            hyman:customeIcon="@drawable/ic_menu_allfriends"
            hyman:customeText="@string/tab_me"
            hyman:text_size="12sp"
            hyman:customeColor="#ff45c01a" />
    </LinearLayout>

</LinearLayout>